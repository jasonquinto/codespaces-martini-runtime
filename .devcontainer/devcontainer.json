{
  "name": "Martini Runtime Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "docker-in-docker": "latest"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "postCreateCommand": [
    "sudo apt-get update && sudo apt-get install -y docker.io",
    "docker pull toroio/martini-runtime",
    "export MR_LICENSE=$(cat /workspaces/mr_license.txt)",
    "docker run -d -e MR_LICENSE=${MR_LICENSE} toroio/martini-runtime"
  ],
  "mounts": [
    "source=mr_license.txt,target=/workspaces/mr_license.txt,type=bind"
  ]
}
